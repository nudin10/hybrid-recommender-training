    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Launch from Project Root",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py", // Specify the absolute path to main.py
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}" // Set CWD to the project root
        }
    ]
}   